<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
<!--  <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern> -->
<!--  <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] reqId=[%X{reqId}] %-5level %logger{36} - %msg%n </Pattern> -->
      <Pattern>%d{yyyy-MM-dd HH:mm:ss} reqId=[%X{reqId}] %-5level %logger{36} - %msg%n </Pattern>
    </encoder>
  </appender>
  
  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
   <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
  
</configuration>